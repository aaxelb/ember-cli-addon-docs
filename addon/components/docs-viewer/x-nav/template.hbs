{{#if (or media.isMobile media.isTablet)}}
  <div class='ad-text-right'>
    <button {{action (toggle 'isShowingMenu' this)}}
      class='ad-text-grey-darkest ad-py-2 ad-text-sm ad-rounded ad-uppercase ad-font-medium'>
      â˜° Menu
    </button>
  </div>
{{/if}}

<nav onclick={{action (mut isShowingMenu) false}}
  class='
    ad-absolute ad-pin-r lg:ad-relative ad-bg-white ad-shadow-lg lg:ad-shadow-none
    ad-w-90% ad-px-3 lg:ad-px-0 ad-z-10 lg:ad-w-1/5 ad-flex-no-shrink ad-transition
    ad-max-w-xs ad-mr-2
    {{if (or media.isMobile media.isTablet)
      (if isShowingMenu 'ad-opacity-100' 'ad-opacity-0 ad-pointer-events-none')

    }}
  '>
  <div class='ad-pt-px ad-sticky ad-pin-t ad-mb-8 lg:ad-max-h-screen lg:ad--mt-4 lg:ad-pt-4 lg:ad-overflow-y-scroll'>
    {{#if (or media.isMobile media.isTablet)}}
      <div class="ad-text-right">
        <button onclick={{action (mut isShowingMenu) false}}
          class='ad-text-grey-darkest ad-opacity-50 hover:ad-opacity-100 ad-text-3xl ad-py-2 ad-no-underline'>
          &times;
        </button>
      </div>
    {{/if}}

    {{#docs-viewer/x-nav-list}}
      {{yield (hash
        section=(component 'docs-viewer/x-section')
        item=(component 'docs-viewer/x-nav-item')
        subnav=(component 'docs-viewer/x-nav-list' class='ml-4')
      )}}

      {{!-- Autogenerated API docs --}}
      {{#if (gt project.modules.length 0)}}
        {{docs-viewer/x-section 'API Reference' style='large'}}

        {{#each-in project.navigationIndex as |type items|}}
          {{docs-viewer/x-section type}}

          {{#each items as |item|}}
            {{docs-viewer/x-nav-item (break-on item.name '/') (concat root '.api.item') item.path}}
          {{/each}}
        {{/each-in}}
      {{/if}}
    {{/docs-viewer/x-nav-list}}

    <div class="ad-mt-16 lg:ad-mb-16 ad-mr-2 ad-text-xs ad-rounded">
      <a href="https://github.com/ember-learn/ember-cli-addon-docs"
        class='ad-opacity-50 hover:ad-opacity-100 ad-transition ad-no-underline
        ad-text-inherit ad-flex ad-items-center ad-text-grey-darkest'>
        {{svg-jar 'addon-docs-pen' width=22 height=16 class='ad-mr-2'}}
        <div>
          Powered by
          <span class="ad-font-bold">AddonDocs</span>
        </div>
      </a>
    </div>
  </div>
</nav>
